<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TraderBot.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TraderBot.Text.Indicator" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="Theme.TraderBot.Text.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.TraderBot.Text.Price" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>